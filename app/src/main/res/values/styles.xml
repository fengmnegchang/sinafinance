<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/status_bar_color</item>
        <item name="colorPrimaryDark">@color/status_bar_color</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDisablePreview">true</item>
    </style>
    <!-- ListView的父style,去除一些基本设置 -->
    <style name="BaseListViewStyle" parent="android:Widget.ListView.White">
        <item name="android:cacheColorHint">#00000000</item> <!-- 去除拖动时默认的黑色背景 -->
        <item name="android:divider">#00000000</item>
        <item name="android:dividerHeight">0.3dp</item>
        <item name="android:listSelector">#00000000</item> <!-- 去除选中时的黄色底色 -->
        <!-- <item name="android:overScrollMode">never</item>--><!-- 去除下拉上拉水阴影虚化 -->
        <!-- <item name="android:scrollbars">none</item> -->
        <!-- 去除滚动条 -->
        <item name="android:fadingEdge">none</item> <!-- 去除ListView滑到顶部和底部时边缘的黑色阴影 -->
    </style>

    <style name="tab_child">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/selector_tab_text_color</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">bottom|center_horizontal</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>
